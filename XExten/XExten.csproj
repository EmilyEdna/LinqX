<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45;netstandard2.0</TargetFrameworks>
    <Authors>EmilyEdna</Authors>
    <Product />
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>This package extends LINQ and produces anonymous expressions. For example: new {t1 = xx, t2 = xx}</Description>
    <PackageProjectUrl>https://github.com/EmilyEdna/XExten</PackageProjectUrl>
    <PackageTags>linq</PackageTags>
    <RepositoryUrl>https://github.com/EmilyEdna/XExten</RepositoryUrl>
    <PackageReleaseNotes>https://github.com/EmilyEdna/XExten</PackageReleaseNotes>
    <Version>1.0.3</Version>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net45'">
    <Reference Include="System.Net.Http" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>D:\Project\XExten\XExten\XExten.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="DynamicType\**" />
    <EmbeddedResource Remove="DynamicType\**" />
    <None Remove="DynamicType\**" />
  </ItemGroup>
  <!--<ItemGroup>
    <Compile Remove="DynamicType\**" />
    <EmbeddedResource Remove="DynamicType\**" />
    <None Remove="DynamicType\**" />
  </ItemGroup>-->

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
  </ItemGroup>
</Project>